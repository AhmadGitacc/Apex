---
layout: layouts/home.njk
permalink: /journal/
eleventyNavigation:
  key: Journal
  order: 3
---

<section class="max-w-7xl mx-auto px-6 py-16">
  <h1 class="text-6xl font-black italic tracking-tighter mb-12">All Articles</h1>

  <div class="space-y-8">
    {% for post in collections.posts | reverse %}
      <article class="group border-b border-zinc-100 pb-8">
        <a href="{{ post.url | url }}" class="block">
          <div class="flex flex-col md:flex-row gap-8">
            {% if post.data.coverImage %}
            <div class="md:w-1/3 aspect-video overflow-hidden flex-shrink-0">
              <img
                src="{{ post.data.coverImage }}"
                alt="{{ post.data.title }}"
                class="w-full h-full object-cover grayscale-hover"
              >
            </div>
            {% endif %}

            <div class="flex-1 space-y-3">
              {% if post.data.category %}
              <span class="text-xs uppercase tracking-wider text-zinc-500">{{ post.data.category }}</span>
              {% endif %}

              <h2 class="text-3xl font-bold group-hover:text-zinc-600 transition-colors leading-tight">
                {{ post.data.title }}
              </h2>

              {% if post.data.description %}
              <p class="text-zinc-600 font-light leading-relaxed">
                {{ post.data.description }}
              </p>
              {% endif %}

              <div class="flex items-center gap-4 text-sm text-zinc-500">
                <time datetime="{{ post.date | htmlDateString }}">{{ post.date | postDate }}</time>
                <span>&middot;</span>
                <span>{{ post.templateContent | readingTime }}</span>
              </div>
            </div>
          </div>
        </a>
      </article>
    {% endfor %}
  </div>
</section>
