---
layout: layouts/home.njk
eleventyNavigation:
  key: Home
  order: 1
---

<section class="relative py-32 px-6">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-8xl md:text-9xl font-black italic tracking-tighter leading-none mb-6">
      Art of<br>THE DRIVE.
    </h1>
    <p class="text-xl font-light text-zinc-600 max-w-2xl">
      A minimalist journal celebrating automotive excellence, design, and the pure joy of driving.
    </p>
  </div>
</section>

<section class="max-w-7xl mx-auto px-6 py-16">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {% for post in collections.posts | reverse %}
      <article class="group">
        <a href="{{ post.url | url }}" class="block">
          {% if post.data.coverImage %}
          <div class="aspect-video overflow-hidden mb-4">
            <img
              src="{{ post.data.coverImage }}"
              alt="{{ post.data.title }}"
              class="w-full h-full object-cover grayscale-hover"
            >
          </div>
          {% else %}
          <div class="aspect-video bg-zinc-100 mb-4 flex items-center justify-center grayscale-hover">
            <svg class="w-16 h-16 text-zinc-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          {% endif %}

          <div class="space-y-2">
            {% if post.data.category %}
            <span class="text-xs uppercase tracking-wider text-zinc-500">{{ post.data.category }}</span>
            {% endif %}

            <h2 class="text-2xl font-bold group-hover:text-zinc-600 transition-colors leading-tight">
              {{ post.data.title }}
            </h2>

            {% if post.data.description %}
            <p class="text-zinc-600 font-light leading-relaxed">
              {{ post.data.description }}
            </p>
            {% endif %}

            <div class="flex items-center gap-4 text-sm text-zinc-500 pt-2">
              <time datetime="{{ post.date | htmlDateString }}">{{ post.date | postDate }}</time>
              <span>&middot;</span>
              <span>{{ post.templateContent | readingTime }}</span>
            </div>
          </div>
        </a>
      </article>
    {% endfor %}
  </div>
</section>
