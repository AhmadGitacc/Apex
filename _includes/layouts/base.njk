<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            fontFamily: {
              'sans': ['Inter', 'system-ui', '-apple-system', 'sans-serif'],
              'serif': ['Lora', 'Georgia', 'serif'],
            },
          }
        },
        plugins: [
          require('@tailwindcss/typography'),
        ],
      }
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700;900&family=Lora:ital,wght@0,400;0,500;1,400&display=swap" rel="stylesheet">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <style>
      @layer utilities {
        .grayscale-hover {
          filter: grayscale(100%);
          transition: filter 0.3s ease;
        }
        .grayscale-hover:hover {
          filter: grayscale(0%);
        }
      }
    </style>
  </head>
  <body class="bg-white text-zinc-900 antialiased">
    <header class="border-b border-zinc-200 py-6">
      <div class="max-w-7xl mx-auto px-6 flex items-center justify-between">
        <h1 class="text-xl font-black tracking-tight">
          <a href="{{ '/' | url }}" class="hover:text-zinc-600 transition-colors">{{ metadata.title }}</a>
        </h1>
        <nav>
          <ul class="flex gap-8 text-sm">
            {%- for entry in collections.all | eleventyNavigation %}
            <li>
              <a href="{{ entry.url | url }}" class="hover:text-zinc-600 transition-colors{% if entry.url == page.url %} font-bold{% endif %}">{{ entry.title }}</a>
            </li>
            {%- endfor %}
          </ul>
        </nav>
      </div>
    </header>

    <main>
      {{ content | safe }}
    </main>

    <footer class="border-t border-zinc-200 mt-24 py-12">
      <div class="max-w-7xl mx-auto px-6 text-center text-sm text-zinc-500">
        <p>&copy; {{ metadata.title }} {{ page.date.getFullYear() or '2024' }}. Art of the Drive.</p>
      </div>
    </footer>
  </body>
</html>
